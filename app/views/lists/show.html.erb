<div class="position-relative mb-4">
  <div class="card-category card-large"
  style="background-image: linear-gradient(
  rgba(0,0,0,0.3),
  rgba(0,0,0,0.3)),
  url(<%= @list.photo.attached? ? url_for(@list.photo) : asset_path('banner.jpg')%>)">
   <h1 class= "text-white"><%= @list.name %></h1>
  </div>
  <span class="movie-tag"><%= pluralize(@list.movies.size, "movie") %></span>
</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <%= link_to "â¬… Back to All Lists", root_path, class: "btn btn-outline-dark" %>

    <div>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
        âž• Add a movie
      </button>
      <%= link_to "ðŸ—‘ Delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    </div>
  </div>

  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
          <div class="p-3 d-flex flex-column h-100 justify-content-between">
            <div>
              <strong><%= movie.title %> <span class="text-muted">â€¢ <%= movie.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
              <p class="text-muted small mt-2"><%= truncate(movie.overview, length: 200) %></p>
              <p class="text-muted"><i class="fas fa-quote-left me-2"></i><%= bookmark.comment %></p>
            </div>
            <div class="text-end">
              <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from this list?" }, class: "btn btn-link text-danger p-0" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr class="my-5">

  <div class="row">
    <div class="col-12 col-sm-6">
      <h3>Reviews</h3>
      <% if @list.reviews.empty? %>
        <small><em class="text-muted">Be the first one to review this list</em></small>
      <% end %>

      <% @list.reviews.each do |review| %>
        <div class="mb-3">
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small class="text-muted"><em><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.comment %></p>
        </div>
        <hr>
      <% end %>
    </div>

    <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3 shadow-sm">
        <h5 class="mb-3">Add your review</h5>
        <%= simple_form_for [@list, @review] do |f| %>
          <%= f.input :comment, placeholder: "Add your review here..." %>
          <%= f.input :rating, as: :select, collection: 1..5, required: true, label: false, input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit "Submit Review", class: "btn btn-flat mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "bookmarks/modal", list: @list, bookmark: @bookmark %>
