<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h3 class="mb-0 display-6">My Lists <small class="text-muted">(<%= pluralize(@lists.count, "list") %>)</small></h3>
    <%= link_to "Create New List", new_list_path, class: "btn btn-flat btn-primary" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card-category shadow-sm rounded" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? url_for(list.photo) : asset_path('banner.jpg') %>)">

            <div class="text-white fw-bold d-flex justify-content-between align-items-center px-3 py-2" style="height: 100%;">
              <span><%= list.name %></span>
              <span class="badge bg-light text-dark"><%= pluralize(list.bookmarks.count, "movie") %></span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
